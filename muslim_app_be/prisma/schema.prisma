generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PrayerCache {
  id          Int      @id @default(autoincrement())
  date        DateTime @unique
  fajr        String
  dhuhr       String
  asr         String
  maghrib     String
  isha        String

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model NotificationSchedule {
  id          Int      @id @default(autoincrement())
  type        NotificationType
  title       String
  body        String
  scheduleAt  DateTime
  meta        Json?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model IslamicEvent {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  dateHijri   String
  estimatedGregorian DateTime?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum NotificationType {
  AZAN
  EVENT_ISLAMIC
  CUSTOM
}

model Surah {
  id           Int     @id
  name         String
  englishName  String?
  numberOfAyahs Int
  revelationType String?
  ayahs        Ayah[]
}

model Ayah {
  id       Int     @id @default(autoincrement())
  ayahNumber Int
  surahId  Int
  textArabic String
  textLatin  String?
  textTranslation String?

  surah    Surah   @relation(fields: [surahId], references: [id])

  @@index([surahId])
}

model LocationCache {
  id          Int      @id @default(autoincrement())
  lat         Float
  lon         Float
  address     String
  city        String?
  state       String?
  country     String?
  countryCode String?
  postalCode  String?
  displayName String

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([lat, lon])
  @@index([lat, lon])
}
